<%= form_for @star do |form| %>
	<fieldset class="devise">
		<legend>Send A Star</legend>
	  <%= form.error_messages %>
	
		<% unless user_signed_in? %>
			<div class="clearfix">
			  <%= form.label :poster, "Sender" %>
			  <div class="input">
			    <%= form.text_field :poster %>
			  </div>
			</div>
		<% end %>
		<div class="clearfix">
		  <%= form.label :recipient %>
		  <div class="input">
		    <%= form.text_field :recipient %>
		  </div>
		</div>
		<div class="clearfix">
		  <%= form.label :description %>
		  <div class="input">
		    <%= form.text_field :description %>
		  </div>
		</div>
		<div class="clearfix">
		  <div class="input">
		    <button class="btn success">Send <%= gold_star %></button>
		  </div>
		</div>
	</fieldset>
<% end %>